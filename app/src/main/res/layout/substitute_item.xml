<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:background="@drawable/mylist_item_card_shape"
    >

    <LinearLayout
        android:id="@+id/selection_frame"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_weight="1">

        <ImageView
            android:id="@+id/selection_icon"
            android:src="@drawable/bg_teal_circle"
            android:layout_gravity="center_vertical|center_horizontal"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_marginStart="10dp"/>

        <ImageView
            android:id="@+id/product_image"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="10dp"
            android:layout_width="50dp"
            android:layout_height="50dp" />


        <TextView
            android:id="@+id/product_name"
            android:layout_weight="1"
            android:layout_gravity="center_vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="10dp"
            android:textColor="@color/black" />

    </LinearLayout>
    <ImageView
        android:id="@+id/restriction_icon"
        android:layout_gravity="center_vertical"
        android:src="@drawable/ic_arrow_button"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_marginHorizontal="5dp"/>
</LinearLayout>