<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/light_gray"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ProductReviewFragment">
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/product_quantity_layout"
        android:fillViewport="true"
        >
        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:id="@+id/product_name"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="10dp"
                android:layout_marginHorizontal="10dp"
                android:textSize="20sp"
                android:textStyle="bold"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                />

            <LinearLayout
                android:id="@+id/product_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="@color/mid_gray"
                app:layout_constraintTop_toBottomOf="@id/product_name"
                >

                <ImageView
                    android:id="@+id/product_image"
                    android:layout_gravity="center_vertical"
                    android:layout_marginHorizontal="20dp"
                    android:layout_marginVertical="20dp"
                    android:layout_width="150dp"
                    android:layout_height="150dp" />
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/product_indications"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:divider="@android:color/transparent"
                    android:layout_marginVertical="20dp"
                    android:layout_marginHorizontal="20dp"
                    android:dividerHeight="10dp"
                    android:scrollbarStyle="outsideOverlay" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/product_description_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:background="@color/light_gray"
                app:layout_constraintTop_toBottomOf="@id/product_layout">
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/find_substitute_button"
                    style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:cornerRadius="28dp"
                    android:paddingHorizontal="20dp"
                    android:backgroundTint="@color/red"
                    android:gravity="center_vertical|center_horizontal"
                    android:textColor="#fff"
                    android:text="@string/find_substitute"
                    android:layout_marginVertical="15dp"
                    />
                <TextView
                    android:id="@+id/product_description_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="start"
                    android:paddingVertical="20dp"
                    android:paddingHorizontal="30dp"/>
                <TextView
                    android:id="@+id/product_ingredient_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/ingredients"
                    android:gravity="start"
                    android:paddingVertical="20dp"
                    android:paddingHorizontal="30dp"/>
                <TextView
                    android:id="@+id/product_ingredient_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="start"
                    android:paddingVertical="20dp"
                    android:paddingHorizontal="30dp"/>
            </LinearLayout>
        </androidx.appcompat.widget.LinearLayoutCompat>
    </androidx.core.widget.NestedScrollView>

    <LinearLayout
        android:id="@+id/product_quantity_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:background="@color/light_gray"
        app:layout_constraintBottom_toTopOf="@id/control_layout"
        >
        <ImageButton
            android:id="@+id/product_quantity_decrease_button"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:background="@drawable/ic_minus_solid"
            android:gravity="center_vertical|center_horizontal"
            android:textColor="#fff"
            android:layout_marginHorizontal="10dp"
            />

        <TextView
            android:id="@+id/product_quantity_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Qty:"
            android:gravity="start"
            android:paddingVertical="20dp"
            android:paddingHorizontal="5dp"/>
        <TextView
            android:id="@+id/product_quantity_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1"
            android:gravity="start"
            android:paddingVertical="20dp"
            android:paddingHorizontal="5dp"/>
        <ImageButton
            android:id="@+id/product_quantity_increase_button"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:background="@drawable/ic_plus_solid"
            android:gravity="center_vertical|center_horizontal"
            android:textColor="#fff"
            android:layout_marginHorizontal="10dp"
            />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/control_layout"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:orientation="horizontal"
        android:background="@color/white"
        android:gravity="center_vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        >

        <ImageButton
            android:id="@+id/back_button"
            android:layout_width="65dp"
            android:layout_height="65dp"
            android:layout_marginStart="30dp"
            android:gravity="center_vertical|center_horizontal"
            android:src="@drawable/ic_back02"
            android:background="#0000"
            />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/add_to_list_button"
            style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
            app:cornerRadius="28dp"
            android:backgroundTint="@color/teal"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:gravity="center_vertical|center_horizontal"
            android:layout_marginStart="35dp"
            android:text="@string/add_to_list"
            android:textColor="#fff"
            android:paddingHorizontal="20dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>