<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/light_gray"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SubstituteFragment">

    <LinearLayout
        android:id="@+id/main_product_layout"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:orientation="horizontal"
        android:background="@color/gray"
        app:layout_constraintTop_toTopOf="parent"
        >

        <ImageView
            android:id="@+id/main_product_image"
            android:layout_gravity="center_vertical"
            android:layout_marginHorizontal="20dp"
            android:layout_width="70dp"
            android:layout_height="70dp" />
        <TextView
            android:id="@+id/main_product_name"
            android:layout_marginTop="40dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />
    </LinearLayout>

    <TextView
        android:id="@+id/textview_substitute"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/substitutes"
        android:paddingVertical="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/main_product_layout"/>

    <ListView
        android:id="@+id/my_list_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="100dp"
        android:background="#F2F4F4"
        android:divider="@android:color/transparent"
        android:dividerHeight="10dp"
        android:paddingHorizontal="10dp"
        android:paddingVertical="10dp"
        android:scrollbarStyle="outsideOverlay"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textview_substitute" />

    <LinearLayout
        android:id="@+id/control_layout"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:orientation="horizontal"
        android:background="@color/white"
        android:gravity="center_vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        >

        <ImageButton
            android:id="@+id/people_button"
            android:layout_width="65dp"
            android:layout_height="65dp"
            android:layout_marginStart="30dp"
            android:gravity="center_vertical|center_horizontal"
            android:src="@drawable/ic_back02"
            android:background="#0000"
            />

        <Button
            android:id="@+id/done_button"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_teal_rounded"
            android:gravity="center_vertical|center_horizontal"
            android:layout_marginStart="40dp"
            android:textColor="#fff"
            android:text="@string/done"
            android:paddingHorizontal="20dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
             />
    </LinearLayout>



</androidx.constraintlayout.widget.ConstraintLayout>